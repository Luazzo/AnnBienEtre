<div class="block background-white background-transparent-image fullwidth">
    <div class="page-header">
        <h1>Nos Prestataires</h1>
        <p>les meilleurs services  &amp; un travaille propre et serieus<br>vous aller decouvrir ici .</p>
    </div><!-- /.page-header -->

    <div class="cards-wrapper">
        <div class="row">
            {% for provider in providers |slice(0, 4) %}
                {% if loop.first %}
                    <div class="col-sm-8">
                    <div class="row"><!--row8 debut de index2-->
                    {% set taille='12'%}
                    {% set cardtall='' %}
                {% endif %}
                {%if loop.index==2%}
                </div><!-- /.row -->
                <div class="row">
                {% set taille='6'%}
                {% set cardtall='' %}
                {% endif %}
                {% if loop.index==3%}
                    {% set taille='6'%}
                    {% set cardtall='' %}
                {% endif %}
                {% if loop.last%}

                    </div><!-- /.row -->
                    </div><!--/.col8-->
                    {% set taille ='4'%}
                    {% set cardtall = true %}
                {% endif %}
                <div class="col-sm-{{taille}}">

                    {{ include('Partials/card.html.twig', { card :{slug:provider.slug, id:provider.id, nom:provider.username, description:provider.email, titre:provider.name,
                        class:'loop.index', tall:cardtall, rout1:'provider_show', image:provider.avatar,rout_serch:'provider_show',rout_detail:'provider_show',rout_bookmark:'provider_show',rout_favorit:'provider_show' } }) }}

                </div><!-- /.col-* -->

            {% endfor %}

        </div><!-- /.row -->
    </div><!-- /.cards-wrapper -->

    <div class="block background-secondary fullwidth mt80 mb-80 pt60 pb60">

        <div class="row">
            <div class="col-sm-12">
                <div class="contact-info-wrapper">
                    <h2>Do You Have Any Questions?</h2>

                    <div class="contact-info">
                <span class="contact-info-item">
                    <i class="fa fa-at"></i>
                    <span>{{ myEmailTwig }}</span>
                </span><!-- /.contact-info-item -->

                        <span class="contact-info-item">
                    <i class="fa fa-phone"></i>
                    <span>{{ myTelTwig }}</span>
                </span><!-- /.contact-info-item -->
                    </div><!-- /.contact-info-->
                </div><!-- /.contact-info-wrapper -->
            </div><!-- /.col-* -->
        </div><!-- /.row -->
    </div>
</div>