{% extends "frontEnd/frontend-layout.html.twig" %}
{% block header_top %}{% include ':Partials:header-top.html.twig' %}{% endblock %}
{% block title %}{{ provider.name }}
{% endblock %}
{% block main %}

    <div class="main">
        <div class="main-inner">
            <div class="content">
                <div></div>


                <div class="container">
                    <div class="row detail-content">
                        <div class="col-sm-7">
                            {% include 'Partials/provider-gallery.html.twig' with {img:{0:{webPath:'img/tmp/gallery-1.jpg'},1:{webPath:'img/tmp/gallery-2.jpg'},2:{webPath:'img/tmp/gallery-3.jpg'},
                                3:{webPath:'img/tmp/gallery-4.jpg'},4:{webPath:'img/tmp/gallery-5.jpg'}}} %}
                            {{ include('Partials/video.html.twig') }}
                            <div class="fullwidth mt80">
                                <div class="row">
                                    <div class="col-sm-6">
                                        {% for category in provider.serviceCategories %}
                                            <div class="posts">
                                                {{ include('Partials/post.html.twig' ,{ post :{id:category.id, image:'img/logo.png', title:category.name, name:category.name, description:category.description,rout:'servicecategory_show' ,date:'2/15/2141'} }) }}
                                            </div><!-- /.posts -->
                                        {% endfor %}
                                    </div><!-- /.col-* -->


                                </div><!-- /.row -->
                            </div><!-- /.block -->

                            {{ include('Partials/comments-affichage.html.twig',{comments:provider.comments}) }}



                        </div><!-- /.col-sm-7 -->

                        <div class="col-sm-5">

                            {{ include('Partials/provider-detail-side-right.html.twig',{provider:provider}) }}
                            <h2><span class="text-secondary">Les Stages</span></h2>

                            <div class='p20 background-'>

                                {% for course in provider.courses %}
                                    <div class='row'>
                                        {{ include('Partials/card-smal-widget.html.twig', { cardSmal :{id:course.id,rout:'course_show',image:'img/logo.png', name:course.name, description:course.description, price:course.price} }) }}
                                    </div>
                                {% endfor %}

                            </div>
                            {{ include('Partials/google-map.html.twig') }}
                            <h2>Enquire Form</h2>

                            <div class="detail-enquire-form background-white p20">
                                <form method="post" action="?">
                                    <div class="form-group">
                                        <label for="">Name</label>
                                        <input type="text" class="form-control" name="" id="">
                                    </div><!-- /.form-group -->

                                    <div class="form-group">
                                        <label for="">Email <span class="required">*</span></label>
                                        <input type="email" class="form-control" name="" id="" required>
                                    </div><!-- /.form-group -->

                                    <div class="form-group">
                                        <label for="">Message <span class="required">*</span></label>
                                        <textarea class="form-control" name="" id="" rows="5" required></textarea>
                                    </div><!-- /.form-group -->

                                    <p>Required fields are marked <span class="required">*</span></p>

                                    <button class="btn btn-primary btn-block" type="submit"><i class="fa fa-paper-plane"></i>Send Message</button>
                                </form>
                            </div><!-- /.detail-enquire-form -->

                        </div><!-- /.col-sm-5 -->

                        <div class="col-sm-12">
                            {{ include('Partials/commentaire-form.html.twig') }}
                        </div><!-- /.col-* -->
                    </div><!-- /.row -->

                </div><!-- /.container -->

            </div><!-- /.content -->
        </div><!-- /.main-inner -->
    </div><!-- /.main -->

{% endblock %}