{% extends 'base.html.twig' %}

{% block body %}
    <h1>Course</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ course.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ course.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ course.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ course.price }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{% if course.start %}{{ course.start|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{% if course.end %}{{ course.end|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Displayof</th>
                <td>{% if course.displayOf %}{{ course.displayOf|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Displayup</th>
                <td>{% if course.displayUp %}{{ course.displayUp|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Info</th>
                <td>{{ course.info }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('courses_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
