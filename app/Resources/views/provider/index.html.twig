{% extends 'base.html.twig' %}

{% block body %}
    <h1>Providers list</h1>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Internetsite</th>
                <th>Contactemail</th>
                <th>Telnum</th>
                <th>Tvanum</th>
                <th>Description</th>
                <th>Facebook</th>
                <th>Youtube</th>
                <th>Gmail</th>
                <th>Twitter</th>
                <th>Advisor</th>
                <th>Id</th>
                <th>Housnum</th>
                <th>Street</th>
                <th>Registration</th>
                <th>Registrationconf</th>
                <th>Unsuccessfultestnum</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for provider in providers %}
            <tr>
                <td><a href="{{ path('prov_show', { 'id': provider.id }) }}">{{ provider.name }}</a></td>
                <td>{{ provider.internetSite }}</td>
                <td>{{ provider.contactEmail }}</td>
                <td>{{ provider.telNum }}</td>
                <td>{{ provider.tvaNum }}</td>
                <td>{{ provider.description }}</td>
                <td>{{ provider.facebook }}</td>
                <td>{{ provider.youtube }}</td>
                <td>{{ provider.gmail }}</td>
                <td>{{ provider.twitter }}</td>
                <td>{{ provider.advisor }}</td>
                <td>{{ provider.id }}</td>
                <td>{{ provider.housNum }}</td>
                <td>{{ provider.street }}</td>
                <td>{% if provider.registration %}{{ provider.registration|date('Y-m-d') }}{% endif %}</td>
                <td>{% if provider.registrationConf %}Yes{% else %}No{% endif %}</td>
                <td>{{ provider.unsuccessfulTestNum }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('prov_show', { 'id': provider.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('prov_edit', { 'id': provider.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('prov_new') }}">Create a new provider</a>
        </li>
    </ul>
{% endblock %}
